!!!
%html
 %head
  %title
   CupOfTea
  = stylesheet_link_tag :all
  = javascript_include_tag :defaults
  = csrf_meta_tag
 %body{:style=>"background-color:#fbebd5;padding:0px;border:0px;margin:0px;"}
  %table{:style=>"width:1008px;cell-spacing:0px;cell-padding:0px;border-spacing:0px;border:0px;"}
   %tr
    %td{:colspan=>3}
     %table{:style=>"height:248px;width:1008px;cell-spacing:0px;cell-padding:0px;border-spacing:0px;background:left top no-repeat url(#{image_path('up-background.jpg')});"}
      %tr
       %td{:style=>"width:*;vertical-align:bottom;padding-bottom:24px;"}
        = form_for :search, :url=>'/search', :html=>{:method=>:get, :style=>""} do |f|
         = f.text_field :q, :class=>"search"
       %td{:style=>"width:319px"}
        %ul.umenu{:style=>"list-style-type:none;"}
         %li= link_to "На главную", root_path, :class=>'umenu'
         %li= link_to "Наши контакты", contacts_path, :class=>'umenu'
         %li= link_to "О нас", about_path, :class=>'umenu'
         -#%li &nbsp;
         %li= link_to "Кофе", section_path(Section.find_by_name('Coffee')), :class=>'umenu'
         %li= link_to "Чай", section_path(Section.find_by_name('Tea')), :class=>'umenu'
         %li Подарки
         %li Аксессуары
         %li &nbsp;
         %li Регистрация
         %li Личный кабинет
         %li Вопросы и ответы
         %li Доставка и оплата
         %li Новости
   %tr{:style=>"background:url('/images/center-line.jpg') no-repeat;"}
    %td.left_menu{:rowspan=>2, :style=>"font:18px verdana;font-weight:bold;height:43px;vertical-align:top;width:220px;max-width:220px;"}
     %div
      .lmenu{:style=>"font:18px verdana;font-weight:bold;padding-bottom:4px;vertical-align:top;width:220px;max-width:220px;"}= link_to 'Чай', section_path(Section.find_by_name('Tea'))
      = render :partial => 'sections/left_menu_block', :locals=>{:root => Section.find_by_name('Tea'), :clazz => 'l1'}
      .lmenu{:style=>"font:18px verdana;font-weight:bold;padding-bottom:4px;vertical-align:top;width:220px;max-width:220px;"}= link_to 'Кофе', section_path(Section.find_by_name('Coffee'))
      = render :partial => 'sections/left_menu_block', :locals=>{:root => Section.find_by_name('Coffee'), :clazz => 'l1'}
      .lmenu{:style=>"font:18px verdana;font-weight:bold;padding-bottom:4px;vertical-align:top;width:220px;max-width:220px;"}= link_to "Горячий шоколад", section_path(Section.find_by_name('Shoko'))
      = render :partial => 'sections/left_menu_block', :locals => {:root => Section.find_by_name('Shoko'), :clazz => 'l1'}
      .lmenu{:style=>"font:18px verdana;font-weight:bold;padding-bottom:4px;vertical-align:top;width:220px;max-width:220px;"}= link_to "Аксессуары", section_path(Section.find_by_name('Acc'))
      = render :partial => 'sections/left_menu_block', :locals => {:root => Section.find_by_name('Acc'), :clazz => 'l1'}
      .lmenu{:style=>"font:18px verdana;font-weight:bold;padding-bottom:4px;vertical-align:top;width:220px;max-width:220px;"}= link_to "Литература", section_path(Section.find_by_name('Books'))
      = render :partial => 'sections/left_menu_block', :locals => {:root => Section.find_by_name('Books'), :clazz => 'l1'}

    %td{:style=>"width:652px;height:152px;background:url(/images/ramka-mordolenta.png);background-position:0px 10px;"}
     = render :partial => "main/mordolenta"
    %td{:style=>"vertical-align:top;width:120px;border-left: 1px black;text-align:center;"}
     %div
      = link_to_unless_current image_tag("korzina2.png", :style=>"margin-top:40px;border:0px none;"), cart_index_path
      %div{:style=>"text-align:center;font-weight:bold;font:16px verdana;"}
       товары
       %span{:style=>"padding-left:10px"}
        = @cart.size.to_s
   %tr
    -#%td{:style=>"vertical-align:top;width:220px;max-width:220px;border-right:3px black;font:14px verdana;"}

    %td{:style=>"width:*;vertical-align:top;"}
     .content
      = yield
    %td{:style=>"width:120px;"}
