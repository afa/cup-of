       = link_to "На главную", root_path
      %li
       = link_to "Наши контакты", contacts_path
      %li
       = link_to "Кофе", coffee_root_path
      %li
       = link_to "Чай", tea_root_path
      %li Подарки
      %li Аксессуары
      %li Регистрация
      %li Личный кабинет
      %li Вопросы и ответы
      %li Доставка и оплата
      %li Специальные предложения
      %li Новости
      %li О чае
     =#%div{:style=>"float:right;"}
     =# link_to image_tag('coffee/main-cup-ur.jpg'), coffee_root_path
    %div{:style=>"float:left;"}
     = image_tag('left-logo-grdnt.png')
    %div{:style=>"clear:left;"}
